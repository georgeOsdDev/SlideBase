@import 'nib'

.hide
  display none

.disp
  display display

header,section,footer
  display none

body
  background #333
  font-family "Lucida Grande", Helvetica, Arial, sans-serif
  font-size 14px
  letter-spacing 0.02em
  margin 0px
  color #fff
  overflow hidden

section
  display none
  position absolute
  top 0
  left 0

#wrap
  padding 30px
  cursor auto

.slide
  position absolute

.ctl
  position absolute
  text-align left
  margin 0px 5px
  top 5px
  right 0px
  color WhiteSmoke
  z-index 10

.help
  position absolute
  margin 0px 5px
  top 15px
  right 0px
  background-color #333
  border-radius 10px
  width 220px
  padding 0px
  color white
  font-family Helvetica

.help > *
  font-size 16px
  vertical-align center
  margin 2px 0 2px 0
  padding-left 2px
  border-bottom 1px solid rgba(0,0,0,.1)
  box-shadow rgba(255,255,255,1) 0 1px 0px

#close
  border 0
  padding 0
  font-size 14px
  color #DEDEDE
  background radial-gradient(30% 30%, 1, 50% 50%, 8, from(#909090), to(#606060))
  border-radius 8px
  height 16px
  width 16px

.transform
  transition transform 1000ms ease-in-out

// for index.html
#adminMenu
  top 0px
  text-align right
  color white

#adminMenu .adminMsg
  text-align right

#adminMenu .successMsg
  position absolute
  top 0px
  right 0px
  color yellow

#adminMenu .errorMsg
  color red

#adminMenu input
  background-color white

.btn
  display inline-block
  margin-top -1px
  margin-bottom 0
  padding 2px 9px 3px
  font-size 12px
  line-height 14px
  text-align center
  vertical-align middle
  cursor pointer
  color #333333
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.75)
  background-color #f5f5f5
  background-image linear-gradient(bottom, #ffffff, #e6e6e6)
  background-repeat repeat-x
  border-color #e6e6e6 #e6e6e6 #bfbfbf
  border 1px solid #bbbbbb
  border-bottom-color #a2a2a2
  border-radius 4px
  box-shadow inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05)

.btn:hover
.btn:active
  color #333333
  background-color #e6e6e6
  text-decoration none
  background-position 0 35px
  transition background-position 0.1s linear

#slideList
  padding 50px

#slideList a
  color #34d0e7

