@import 'nib'

zuruiLine(alpha1 = 0.1, alpha2 = 1.0)
  border-bottom 1px solid rgba(0,0,0,alpha1)
  box-shadow rgba(255,255,255,alpha2) 0 1px 0px

zuruiBoarderTop()
  border-top 1px solid rgba(0,0,0,.1)
  box-shadow rgba(255,255,255,1) 0 1px 0px inset
zuruiBoarderRight()
  border-right 1px solid rgba(0,0,0,.1)
  box-shadow rgba(255,255,255,1) 0 1px 0px inset
zuruiBoarderLeft()
  border-left 1px solid rgba(0,0,0,.1)
  box-shadow rgba(255,255,255,1) 0 1px 0px
zuruiBoarderBottom()
  border-bottom 1px solid rgba(0,0,0,.1)
  box-shadow rgba(255,255,255,1) 0 1px 0px

zuruiBoarder()
  zuruiBoarderTop()
  zuruiBoarderRight()
  zuruiBoarderLeft()
  zuruiBoarderBottom()

zuruiBoxShadow()
  box-shadow rgba(255,255,255,.5) -1px 1px 0,rgba(255,255,255,1) -1px 1px 0 inset

zuruiTextShadowDark(op = .4)
  text-shadow 1px -1px rgba(0,0,0,op)

zuruiTextShadowLight(op = .7)
  text-shadow -1px 1px rgba(255,255,255,op)

zuruiGradientTopDark(op = #333, val = 10%)
  background op
  background linear-gradient(darken(op,val), op, vertical)
  backgorund-image linear-gradient(darken(op,val) 0%, op 100%)

break-word()
  word-wrap break-word

clear()
  clear both

hide()
  display none


body
  font-family "Lucida Grande", Helvetica, Arial, sans-serif,"Meiryo UI"
  letter-spacing 0.02em
  color black
  font-size 150%
  zuruiGradientTopDark()

em
  color #8dbd0c

a
  color #34d0e7

li
  margin-left 20px

.slide
  background #EEE
  border-radius 6px
  zuruiBoxShadow()

.slide > *
  margin-right 30px
  margin-left 10px
  padding 10px 0 0 20px

.slide > div > *
  width 100%
  height 100%

.slide > h1
  background F8F8F8

.slide > h1,h2
  margin-top -10px
  zuruiLine()
  zuruiTextShadowLight(1)

.slide > * > iframe
  height 60%
  width 100%
  zuruiBoarder()

.slide > table
  padding-left 10px
  max-width 90%
  background-color transparent
  border-collapse collapse
  border-spacing 0
  width 90%
  margin-bottom 18px

.slide > table > thead > tr > th
.slide > table > tr > th
  text-align left
  vertical-align bottom
  font-weight bold

.slide > table > tbody > tr > td
.slide > table > tr > td
  padding 8px
  line-height 18px
  text-align left
  vertical-align top
  border-top 1px solid #dddddd

.slide > table > tbody tr:hover td
.slide > table > tbody tr:hover th
  background-color #f5f5f5

.slide > img
  height 80%
  margin-left auto

.btn
  display inline-block
  margin-top -1px
  margin-bottom 0
  padding 2px 9px 3px
  font-size 12px
  line-height 14px
  text-align center
  vertical-align middle
  cursor pointer
  color #333333
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.75)
  background-color #f5f5f5
  background-image linear-gradient(bottom, #ffffff, #e6e6e6)
  background-repeat repeat-x
  border-color #e6e6e6 #e6e6e6 #bfbfbf
  border 1px solid #bbbbbb
  border-bottom-color #a2a2a2
  border-radius 4px
  box-shadow inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05)

.btn:hover
.btn:active
  color #333333
  background-color #e6e6e6
  text-decoration none
  background-position 0 35px
  transition background-position 0.1s linear

.center
  text-align center

.pull-right
  float right

.hide
  hide()

.berak
  break-word()

.clear
  clear()
